@model AdmissionDto;
@{
}
@inject IConfiguration Configuration
<script type="text/javascript">
    function select_onchange(value) {
        const commonUrl = @Json.Serialize(@Configuration.GetSection("MainAPI").GetSection("APIURL").Value);
        var itenNo = document.getElementById("investigation").value;
        var settings = {
            "url": commonUrl + "Investigation/GetAllInvestigationByID?Id=" + itenNo,
            "method": "GET",
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/json"
            },
        };

        $.ajax(settings).done(function (response) {
            console.log(response);
            console.log(response.price);
            document.getElementById("txtPrice").value = response.price.toFixed(2);

            var qty = document.getElementById("txtQty").value;
            var price = document.getElementById("txtPrice").value;
            amount = qty * price;
            document.getElementById("txtAmount").value = amount.toFixed(2);

        });
    }
       function updateAmount() {
        var price = parseFloat($("#txtPrice").val()) || 0;
        var qty = parseFloat($("#txtQty").val()) || 0;
        var totalAmount = price * qty;
        $("#txtAmount").val(totalAmount.toFixed(2));
    }
    let invList = [];

    function addInvestigation() {
        var drugDropdown = document.getElementById("investigation");
        var selectedDrugId = drugDropdown.value;
        var selectedDrugName = drugDropdown.options[drugDropdown.selectedIndex].text;
        console.log('Investigation ID',selectedDrugId);
        console.log('Investigation ID',selectedDrugName);
        var price = parseFloat(document.getElementById("txtPrice").value) || 0;
        var qty = parseFloat(document.getElementById("txtQty").value) || 0;
        var amount = price * qty;

        if (selectedDrugId == 0) {
            alert("Please select a valid drug.");
            return;
        }
        if (qty <= 0) {
            alert("Please enter a valid quantity.");
            return;
        }

        const AdmissionId = $("#custId").val();

        console.log('list qty:', qty);
        console.log('list price:', price);
        console.log('list Amount:', amount);

        // Add drug to list
        invList.push({
            AdmissionId: AdmissionId,
            InvestigationId: selectedDrugId,
            DrugName: selectedDrugName,
            Price: price,
            Qty: qty,
            Amount: amount
        });

        // Append new row to the table
        const newRow = `
            <tr id="row_${selectedDrugId}">
                <td>${selectedDrugName}</td>
                <td>${qty.toFixed(2)}</td>
                <td>${price.toFixed(2)}</td>
                <td>${amount.toFixed(2)}</td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="removedrug(${selectedDrugId})">Remove</button>
                </td>
            </tr>
        `;

        $("#tempConsultantTable tbody").append(newRow);

        // Clear input fields after adding the drug
        $("#drugus").val(0);
        $("#txtQty").val("1.00");
        $("#txtPrice").val("1.00");
    }

    function removedrug(id) {
        // Remove from the list
        invList = invList.filter(drug => drug.ItemId != id);

        // Remove row from table
        $(`#row_${id}`).remove();
    }
     function saveInvestigation() {
        if (invList.length === 0) {
            alert("No Drugs to save.");
            return;
        }
         console.log('length:', invList.length);
         console.log('list:', invList);
        $.ajax({
            type: "POST",
            url: "/Admission/AddNewInvestigation",
            contentType: 'application/json',
            data: JSON.stringify(invList),
            success: function (response) {
                 alert('Drugs saved successfully!');

           invList = [];

            // ✅ Clear all rows except the header
            const table = document.getElementById('tempConsultantTable');
            const rowCount = table.rows.length;
            for (let i = rowCount - 1; i > 0; i--) { // loop from last row to first (skip header)
                table.deleteRow(i);
            }

            // ✅ Optionally, clear input fields
            $("#drugus").val(0);
            $("#txtQty").val("1.00");
            $("#txtPrice").val("1.00");
            $("#txtAmount").val("0.00");
               ShowShiftDetails(@Model.AdmissionsId); // Refresh the page or update the UI
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }

</script>
<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="myLargeModalLabel">Add/Edit Investigation  </h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="ShowShiftDetails(@Model.AdmissionsId)">×</button>
    </div>
    <div class="modal-body">

        <form asp-action="AddNewInvestigation" method="post">
                <input type="hidden" id="custId" asp-for="AdmissionsId">
                <div class="row">
       
          
          

            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Type</label>
                    <select class="form-control ddlSearchList" name="cars" id="cars">
                        <option value="1">Lab Investigation</option>
                        <option value="2">Thearter Investigation</option>
                        <option value="3">Other Investigation</option>
                    </select>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="companyName">Name of Investigation </label>
                    <select class="form-control ddlSearchList" onchange="javascript:select_onchange(this.value);" asp-for="AdmissionInvestigations.InvestigationId" id="investigation">
                        <option value="0">Name of Investigation</option>
                        @foreach (var item in Model.Investigations)
                        {
                            <option value="@item.Id">@item.InvestigationName - @item.InvestigationCategory.Investigation</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Qty </label>
                        <input class="form-control " type="text" asp-for="AdmissionInvestigations.Qty" placeholder="Qty" onkeyup="updateAmount();" value="1.00" id="txtQty" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Price</label>
                    <input class="form-control " type="text" id="txtPrice" asp-for="AdmissionInvestigations.Price"  value="1.00" placeholder="Price" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Amount</label>
                    <input class="form-control " type="text" id="txtAmount" value="0.00" asp-for="AdmissionInvestigations.Amount"  placeholder="Amount" disabled />
                </div>
            </div>
           
            <div class="col-md-4">
                <div class="form-group">
                    <button type="button" class="btn btn-success" onclick="addInvestigation()">Add Investigation</button>
                </div>
            </div>
            <div class="table-responsive">
                <table id="tempConsultantTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Investigation Name</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>


            </div>
       
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" onclick="ShowShiftDetails(@Model.AdmissionsId)">Close</button>
                <button type="button" class="btn  waves-effect btn-primary" onclick="saveInvestigation()"><i class="fa fa-save"></i>&nbsp;Save</button>
            </div>
            </form>
    </div>
    <div class="modal-footer">
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="myTable" class="table table-striped table-bordered dataTable fonts-12" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th>Investigation Name</th>
                            <th>Qty</th>
                            <th>Price</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblBodyPayments"> 
                        @foreach (var item in Model.AdmissionInvestigationList)
                        {
                            <tr>


                                <td>@item.Investigation.InvestigationName</td>

                                <td>@item.Qty</td>

                                <td>@item.Price</td>
                                <td>@item.Amount</td>

                                <td>
                                    @if (Model != null)
                                    {

                                        @using (Html.BeginForm("DeleteAdmissionInvestigation", "Admission", new { Id = @item.Id }, FormMethod.Post))
                                        {

                                            <button id='link_copy' class='btn waves-effect waves-light btn-xs btn-danger'><i class='fa fa-trash'></i></button>

                                        }
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
