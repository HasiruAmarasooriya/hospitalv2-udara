                        <input class="form-control" type="text" id="txtDoctorFee" readonly placeholder="Consultant Fee" />
                    </div>
                </div>
            @*<div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Price</label>
                    <input class="form-control" id="txtPrice" type="text" value="1.00" placeholder="Price" asp-for="AdmissionConsultants.Price"/>
                </div>
            </div>*@

            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Amount</label>
                        <input class="form-control " type="text" id="txtAmount" asp-for="AdmissionConsultants.Amount" value="0.00" placeholder="Amount" />
                </div>
            </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button type="button" class="btn btn-success" onclick="addConsultant()">Add Consultant</button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="tempConsultantTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Consultant Name</th>
                                <th>Qty</th>
