                        <select class="form-control ddlSearchList" onchange="loadConsultantDetails()" asp-for="AdmissionConsultants.ConsultantId" id="consultant">
                        <option value="0">Name of Consultant</option>
                        @foreach (var item in Model.Consultants)
                        {
                                <option value="@item.Id" data-doctorfee="@item.DoctorFee" data-hospitalfee="@item.HospitalFee">@item.Name - @item.Specialist.Name</option>
                        }
                    </select>
                </div>
            </div>
            @*<div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Qty </label>
                        <input class="form-control " type="text" id="txtQty" asp-for="AdmissionConsultants.Qty" value="1.00" onkeyup="javascript:select_onchange();" placeholder="Qty" />
                </div>
            </div>*@
            <div class="col-md-4">
                    <div class="form-group">
                        <label for="txtHospitalFee">Hospital Fee</label>
