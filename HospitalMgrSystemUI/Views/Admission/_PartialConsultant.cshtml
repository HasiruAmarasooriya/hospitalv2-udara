@inject IConfiguration Configuration
<script type="text/javascript">
    function select_onchange(value) {

        const commonUrl = @Json.Serialize(@Configuration.GetSection("MainAPI").GetSection("APIURL").Value);
        var itenNo = document.getElementById("consultant").value;
        var settings = {
            "url": commonUrl + "Consultant/GetAllConsultantByID?Id=" + itenNo,
            "method": "GET",
            "headers": {
                "Accept": "application/json",
                "Content-Type": "application/json"
            },
        };

        $.ajax(settings).done(function (response) {
            console.log(response);
            console.log(response.price);
    

            var hospitalfee = document.getElementById("txtHospitalFee").value;
            var docotrfee = document.getElementById("txtDoctorFee").value;
            console.log('Hospitlfee'+hospitalfee);
            console.log('Doctorfee'+docotrfee);
            amount = hospitalfee + docotrfee;
            document.getElementById("txtAmount").value = amount.toFixed(2);

        });
    }
    function loadConsultantDetails() {
        const selectedOption = $("#consultant option:selected");

        // Parse the values to numbers
        const doctorFee = parseFloat(selectedOption.data("doctorfee")) || 0;
        const hospitalFee = parseFloat(selectedOption.data("hospitalfee")) || 0;

        console.log('docFee:', doctorFee);
        console.log('hosFee:', hospitalFee);

        // Calculate amount
        const amount = hospitalFee + doctorFee;
        console.log('amount:', amount);

        // Update form fields
        $("#txtDoctorFee").val(doctorFee.toFixed(2));
        $("#txtHospitalFee").val(hospitalFee.toFixed(2));
        $("#txtAmount").val(amount.toFixed(2));
    }

        let consultantList = [];

    function addConsultant() {
         const selectedOption = $("#consultant option:selected");
        const ConsultantId = $("#consultant").val();
        const consultantName = $("#consultant option:selected").text();
        const DocFee =  parseFloat(selectedOption.data("doctorfee")) || 0;
        const HospitalFee = parseFloat(selectedOption.data("hospitalfee")) || 0;
        const AdmissionId = $("#custId").val()
        console.log('list qty:', DocFee);
        console.log('list price:', HospitalFee);
        const Amount = DocFee + HospitalFee;
        console.log('list amount:', Amount);
        if (ConsultantId == 0) {
            alert("Please select a consultant.");
            return;
        }

        consultantList.push({AdmissionId, ConsultantId, consultantName, DocFee, HospitalFee, Amount });

        const newRow = `
            <tr>
                <td>${consultantName}</td>
                <td>${DocFee}</td>
                <td>${HospitalFee.toFixed(2)}</td>
                <td>${Amount.toFixed(2)}</td>
                <td><button type="button" class="btn btn-danger btn-sm" onclick="removeConsultant('${ConsultantId}')">Remove</button></td>
            </tr>
        `;
        $("#tempConsultantTable tbody").append(newRow);

        // Clear fields
        $("#consultant").val(0);
        $("#txtQty").val("1.00");
        $("#txtPrice").val("1.00");
    }

    function removeConsultant(id) {
        consultantList = consultantList.filter(c => c.ConsultantId !== id);
        $(`#tempConsultantTable tbody tr:has(button[onclick*='${id}'])`).remove();
    }
     
    function saveConsultants() {
        if (consultantList.length === 0) {
            alert("No consultants to save.");
            return;
        }
         console.log('length:', consultantList.length);
         console.log('list:', consultantList);
        $.ajax({
            type: "POST",
            url: "/Admission/AddNewConsultant",
            contentType: 'application/json',
            data: JSON.stringify(consultantList),
            success: function (response) {
               ShowShiftDetails(@Model.AdmissionsId);// Refresh the page or update the UI
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }



</script>

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="myLargeModalLabel">Add/Edit Consultants  </h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="ShowShiftDetails(@Model.AdmissionsId)">×</button>
    </div>
  
    <div class="modal-body">

        <form asp-action="AddNewConsultant" method="post">
        <input type="hidden" id="custId" asp-for="AdmissionsId">
        <div class="row">

 
     
               
            <div class="col-md-4">
                <div class="form-group">
                    <label for="companyName">Type</label>
                    <select class="form-control ddlSearchList" name="cars" id="cars">
