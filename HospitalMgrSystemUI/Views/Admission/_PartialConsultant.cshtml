                            <th>Consultant Name</th>
                            <th>Hospital Fee</th>
                            <th>Doctor Fee</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="tblBodyPayments">
