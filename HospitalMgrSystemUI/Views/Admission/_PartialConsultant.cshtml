                    </table>
                </div>
              
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect text-left" data-dismiss="modal" onclick="ShowShiftDetails(@Model.AdmissionsId)">Close</button>
                <button type="button" class="btn  waves-effect btn-primary" onclick="saveConsultants()"><i class="fa fa-save"></i>&nbsp;Save</button>

                @* <button type="submit" class="btn  waves-effect btn-primary"><i class="fa fa-save"></i>&nbsp;Save</button>*@
            </div>
    </form>
    </div>
