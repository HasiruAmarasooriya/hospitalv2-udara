                function discharge(id) {
            console.log("Discharge function called with id:", id);
            $.ajax({
                type: "GET",
                url: "/Admission/DischargeAdmission/" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json", // Ensures response is treated as JSON
                success: function (response) {
                    console.log("Raw AJAX Success Response:", response); // Debugging

                    // Ensure response is properly parsed
                    var jsonResponse = (typeof response === "string") ? JSON.parse(response) : response;
                    console.log("Parsed Response:", jsonResponse);

                    if (jsonResponse && jsonResponse.message) {
                        alert(jsonResponse.message); // Show success message
                        location.reload();
                    } else {
                        alert("Unexpected response format: " + JSON.stringify(response));
                    }
                },
                error: function (xhr, status, error) {
                    console.log("AJAX Error:", xhr.responseText);
                    alert("An error occurred: " + xhr.responseText);
                }
            });
        }

