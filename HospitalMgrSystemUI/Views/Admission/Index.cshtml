@functions {
    // Helper function to determine the CSS class based on payment status
    public string GetRowClass(HospitalMgrSystem.Model.Enums.PaymentStatus paymentStatus, HospitalMgrSystem.Model.Enums.ItemInvoiceStatus invoiceStatus)
    {
        if (paymentStatus == HospitalMgrSystem.Model.Enums.PaymentStatus.Refund)
        {
            return "table-danger";
        }
        if (paymentStatus    == HospitalMgrSystem.Model.Enums.PaymentStatus.PAID)
        {
            return "table-success";
        }
        if (paymentStatus == HospitalMgrSystem.Model.Enums.PaymentStatus.NOT_PAID)
        {
            return "table-warning";
        }
        switch (paymentStatus)
        {
            case HospitalMgrSystem.Model.Enums.PaymentStatus.NOT_PAID:
                return "table-warning";
            case HospitalMgrSystem.Model.Enums.PaymentStatus.Refund:
                return "table-danger";
            case HospitalMgrSystem.Model.Enums.PaymentStatus.PAID:
                return "table-success";
            default:
                return ""; // No additional class for other statuses
        }
    }
}
