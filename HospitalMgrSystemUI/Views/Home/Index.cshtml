@section Styles {
    <style>
        /* General Container Styles */
        .order-card {
            border-radius: 15px;
            transition: all 0.5s ease-in-out;
            cursor: pointer;
            overflow: hidden;
            transform: perspective(1500px) rotateY(0deg) rotateX(0deg) translateZ(0);
            position: relative;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 60px rgba(255, 255, 255, 0.1) inset;
            background: #fff;
            will-change: transform, box-shadow;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: #333;
            border: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border for depth */
        }

        .dark-theme .order-card {
            border-radius: 15px;
            transition: all 0.5s ease-in-out;
            cursor: pointer;
            overflow: hidden;
            transform: perspective(1500px) rotateY(0deg) rotateX(0deg) translateZ(0);
            position: relative;
            box-shadow: 0px 78px 78px -9px rgba(51,49,51,0.66);
           
            will-change: transform, box-shadow;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: #333;
            border: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border for depth */
        }

            .dark-theme .order-card:hover {
            transform: perspective(1500px) rotateY(15deg) rotateX(10deg) translateY(-20px) translateZ(50px);
                box-shadow: 0 20px 40px rgb(240, 240, 240), 0 0 60px rgb(210, 210, 210) inset;
            filter: brightness(1.1);
            animation: pulse 1.5s ease-in-out infinite, cardBounce 0.6s ease-out;
        }

        /* Card Glow Effect */
            .dark-theme  .order-card:hover {
                box-shadow: 0px 49px 78px -9px rgba(82,79,82,1);
        }
            .order-card:hover {
                transform: perspective(1500px) rotateY(15deg) rotateX(10deg) translateY(-20px) translateZ(50px);
                box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5), 0 0 100px rgba(255, 255, 255, 0.6) inset;
                filter: brightness(1.1);
                animation: pulse 1.5s ease-in-out infinite, cardBounce 0.6s ease-out;
            }

            /* Card Glow Effect */
            .order-card:hover {
                box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5), 0 0 100px rgba(255, 255, 255, 0.6) inset;
                filter: brightness(1.1);
            }

        /* Gradient Backgrounds with Depth */
        .bg-c-blue {
            background: linear-gradient(135deg, #98D8EF, #A6CDC6);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
        }

        .bg-c-green {
            background: linear-gradient(135deg, #00b09b, #BAD8B6);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
        }

        .bg-c-yellow {
            background: linear-gradient(135deg, #F3C623, #F2F597);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
        }

        .bg-c-pink {
            background: linear-gradient(135deg, #ff4b5c, #ff8e67);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
        }

        .bg-info {
            background: linear-gradient(135deg, #17a2b8, #81DAE3);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
        }

        /* Card Style */
        .card {
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2), 0 0 50px rgba(255, 255, 255, 0.3) inset;
            margin-bottom: 30px;
            transition: all 0.3s ease-in-out;
            position: relative;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4), 0 0 80px rgba(255, 255, 255, 0.5) inset;
            }

            /* Card Content */
            .card .card-block {
                padding: 25px;
            }

        /* Icon Styles */
        .order-card i {
            font-size: 40px;
            margin-bottom: 10px;
            transition: all 0.5s ease-in-out;
            transform: rotate(0deg);
            color: inherit; /* Inherit color from parent */
            position: relative;
        }

        /* Icon Rotate and Popup Effect on Hover */
        .order-card:hover i {
            transform: rotate(360deg) scale(1.2);
            color: inherit; /* Keep the same color as the card background */
            animation: rotatePopup 0.6s forwards;
        }

        /* Header and Count Styles */
        .order-card h3, h2 {
            font-weight: 600;
            font-size: 22px;
            margin-bottom: 10px;
            transition: all 0.3s ease-in-out;
            color: black;
        }

        .order-card:hover h2, h3 {
            color: black;
            transform: translateY(-10px);
            letter-spacing: 1.2px;
        }

        /* Subtle 3D Hover Effect */
        .order-card:active {
            transform: perspective(1500px) rotateX(15deg) rotateY(15deg) translateZ(30px);
            box-shadow: 0 50px 100px rgba(0, 0, 0, 0.6), 0 0 120px rgba(255, 255, 255, 0.7) inset;
        }

        /* Card Shadow Rotation */
        .order-card:active {
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 0 0 100px rgba(255, 255, 255, 0.6) inset;
            transform: perspective(1500px) rotateY(25deg) rotateX(15deg) translateY(5px) translateZ(50px);
        }

        /* Floating Elements */
        .f-left {
            float: left;
            transition: all 0.3s ease-in-out;
        }

        .f-right {
            float: right;
            transition: all 0.3s ease-in-out;
        }

            /* Subtle Shadow Effects for Floating Elements */
            .f-left:hover, .f-right:hover {
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

       

    </style>
}

