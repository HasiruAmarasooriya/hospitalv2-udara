@{
    ViewData["Title"] = "Home Page";
}
@section Styles{
    <style>


        .order-card {
            
            border-radius: 15px;
            transition: all 0.3s ease-in-out;
            cursor: pointer;
            overflow: hidden;
            transform: perspective(1000px) rotateY(0deg);
            position: relative;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

            .order-card:hover {
                transform: perspective(1000px) rotateY(20deg) translateY(30px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            }



        .bg-c-blue {
            background: linear-gradient(135deg, #98D8EF, #A6CDC6);
        }

        .bg-c-green {
            background: linear-gradient(135deg, #00b09b, #BAD8B6);
        }

        .bg-c-yellow {
            background: linear-gradient(135deg, #F3C623,#F2F597);
        }

        .bg-c-pink {
            background: linear-gradient(135deg, #ff4b5c, #ff8e67);
        }

        .bg-info {
            background: linear-gradient(135deg, #17a2b8, #81DAE3);
        }


        .card {
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
            border: none;
            margin-bottom: 30px;
            -webkit-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }

            .card .card-block {
                padding: 25px;
            }

       

        .order-card i {
            font-size: 40px;
            margin-bottom: 10px;
             
        }

        .order-card h2, .order-card .count {
            font-weight: 600;
            font-size: 22px;
            margin-bottom: 10px;
            
        }

        .f-left {
            float: left;
        }

        .f-right {
            float: right;
        }

    </style>
}


    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

    <div class="row">

	    <div class="col-md-4 col-xl-3 mt-5" id="admissionDiv">
		    <div class="card bg-c-blue order-card">
			    <div class="card-block">
				    <h2 class="m-b-20">Admission</h2>
				    <h2 class="text-right"><i class="fa fa-bed f-left"></i><span>486</span></h2>
