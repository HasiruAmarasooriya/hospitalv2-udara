									decimal? totalDiscountAmount = 0;
									decimal? totalDoctorRefundAmount = 0;
									decimal? totalHospitalRefundAmount = 0;
									decimal? totalFullRefundAmount = 0;

									@foreach (var item in Model.ChannelingPaidReports)
