@{
}
@inject IConfiguration Configuration
@section Styles {
    <style>
        .select2-selection__rendered {
            line-height: 31px !important;
        }

        .select2-container .select2-selection--single {
            height: 35px !important;
        }

        .select2-selection__arrow {
            height: 34px !important;
        }
    </style>
}
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Summary Reports</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Summary Reports</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="modal-body">
                    <form asp-action="filterForm" method="post">
                        <input type="hidden" id="opid" >
                        <div class="row">

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="companyName">Start Date</label>
                                    <input type="text" id="date-format-start" asp-format="{0:yyyy.MM.dd}" class="form-control"  placeholder="">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="companyName">End Date</label>
                                    <input type="text" id="date-format-end" asp-format="{0:yyyy.MM.dd}" class="form-control"  placeholder="">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="companyName">Invoiced Type</label>
                                    <select class="form-control ddlSearchList" id="dropSessionType" >
                                        <option value="0">OPD</option>
                                        <option value="1">Channeling</option>
                                        <option value="2">Other</option>
                                    </select>
                                </div>
                            </div>
               

                        </div>



                        <div class="modal-footer d-flex justify-content-between">
                            <div class="spark-chart form-material">
                                <ol class="list-unstyled d-flex">
                                    <li class="mr-2">
                                        <button class="btn waves-effect btn-info"><i class="fa-solid fa-moon"></i>&nbsp; Today</button>
                                    </li>

                                    <li class="mr-2">
                                        <button class="btn waves-effect btn-info"><i class="fa-solid fa-moon"></i>&nbsp; Yesterday</button>
                                    </li>
                                    <li class="mr-2">
                                        <button class="btn waves-effect btn-info"><i class="fa-solid fa-moon"></i>&nbsp; Last Week</button>
                                    </li>
                                    <li class="mr-2">
                                        <button class="btn waves-effect btn-info"><i class="fa-solid fa-moon"></i>&nbsp; Last Month</button>
                                    </li>
                                </ol>
                            </div>
                            <div>
                                <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal" onclick="handleClear()">&nbsp;Clear</button>
                                <button type="submit" class="btn waves-effect btn-primary"><i class="fa fa-save"></i>&nbsp;Filter</button>
                            </div>
                        </div>




                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">OPD Paid</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-success">
                                <tr>

                                    <th>No</th>
                                    <th>Invoice ID</th>
                                    <th>OPD ID</th>
                                    <th>Shift</th>
                                    <th>Cashier</th>
                                    <th>Issued By</th>
                                    <th>Total Amount</th>
                                    <th>Total Paid Amount</th>
                                    <th>Deviation</th>
                                    <th>Action 1</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                    </table>

                </div>
                    <br>
                    <h4 class="card-title">OPD Partial Paid</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-danger">
                                <tr>

                                    <th>No</th>
                                    <th>Invoice ID</th>
                                    <th>OPD ID</th>
                                    <th>Cashier</th>
                                    <th>Issued By</th>
                                    <th>Total Amount</th>
                                    <th>Total Paid Amount</th>
                                     <th>Deviation</th>
                                    <th>Action 1</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                    </div>
                    <br>

                    <h4 class="card-title">OPD Need to Pay</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-danger">
                                <tr>

                                    <th>No</th>
                                    <th>Invoice ID</th>
                                    <th>OPD ID</th>
                                    <th>Cashier</th>
                                    <th>Issued By</th>
                                    <th>Total Amount</th>
                                    <th>Total Paid Amount</th>
                                    <th>Deviation</th>
                                    <th>Action 1</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                    </div>
                    <br>
                    <h4 class="card-title">OPD Night Shift</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-danger">
                                <tr>

                                    <th>No</th>
                                    <th>Invoice ID</th>
                                    <th>OPD ID</th>
                                    <th>Cashier</th>
                                    <th>Issued By</th>
                                    <th>Total Amount</th>
                                    <th>Total Paid Amount</th>
                                    <th>Deviation</th>
                                    <th>Action 1</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                    </div>
                    <br>
                    <h4 class="card-title">OPD Not Paid</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-danger">
                                <tr>

                                    <th>No</th>
                                    <th>OPD ID</th>
                                    <th>Cashier</th>
                                    <th>Issued By</th>
                                    <th>Total Amount</th>
                                    <th>Action 1</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title" style="text-align: center;">Summary</h3>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-success">
                                <tr>
                                    <th style="text-align: right; width:50%">From:</th>
                                    <th style="text-align: left;">YYYY/MM/DD</th>
                                </tr>
                                <tr>
                                    <th style="text-align: right; width:50%">To:</th>
                                    <th style="text-align: left;">YYYY/MM/DD</th>
                                </tr>
                                <tr>
                                    <th style="text-align: right; width:50%">Total Amount:</th>
                                    <th style="text-align: left;">0.00 LKR</th>
                                </tr>
                                <tr>
                                    <th style="text-align: right;">Total Refund:</th>
                                    <th style="text-align: left;">0.00 LKR</th>
                                </tr>
                                <tr>
                                    <th style="text-align: right;">Total Paid Amount:</th>
                                    <th style="text-align: left;">0.00 LKR</th>
                                </tr>

                            </thead>
                            <tbody class="table-primary">
                                <tr>
                                    <th style="text-align: right;">Total Balence:</th>
                                    <th style="text-align: left;">0.00 LKR</th>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    
                </div>
            </div>
        </div>
    </div>
<div id="AddShiftModel" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg" id="AddEditContainerModel">
    </div>
</div>
<div id="AddShiftModel2" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
