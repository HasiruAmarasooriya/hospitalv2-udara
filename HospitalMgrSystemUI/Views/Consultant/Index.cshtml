@model ConsultantDto;

@{
}


<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Manage Consultant Details</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active">Manage Consultant Details</li>
        </ol>
    </div>

    <div class="col-md-7 col-4 align-self-center">
        <div class="d-flex m-t-10 justify-content-end">
            <div class="d-flex m-r-20 m-l-10 hidden-md-down">
                <div class="spark-chart form-material">
                </div>
                <div class="spark-chart form-material">
                    <button type="button" id="btnCreateShift" class="btn waves-effect waves-light btn-block btn-info" onclick="ShowShiftDetails()"><i class="mdi mdi-account-plus"></i>&nbsp;Add New Consultant </button>






                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Patient Details</h4>
                @using (Html.BeginForm("Search", "Consultant", new { value = 100 }, FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group-sm ">
                                <input class="form-control " type="text" asp-for="SearchValue" id="txtSearch" placeholder="Search.." />
                                <label for="StartShiftUtc">&nbsp;</label>

                            </div>
                        </div>
                        <div class="col-md-2" id="divLoader">
                            <div class="form-group-sm ">
                                <button type="submit" class="btn btn btn-primary" id="btnfilter" data-toggle="tooltip" data-placement="top" title="Filter Records By Date Range"><i class="fa fa-filter"></i> &nbsp;Filter</button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group mt-4-q">

                            </div>
                        </div>
                    </div>

                }



                    <div class="row"></div>
                    <div class="table-responsive">
                    <table id="basic-2" class="display">
                            <thead>
                                <tr>


                                    <th>Consultant Full Name</th>
                                    <th>Age</th>
                                    <th>Specialist</th>
                                    <th>Contact Number</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody id="">
                                @foreach (var item in Model.listConsultants)
                                {
                                    <tr>


                                        <td>@item.Name</td>
                                        <td>@item.Age</td>
                                        <td>@if (item.Specialist != null)
                                        { @item.Specialist.Name } </td>
                                        <td>@item.ContectNumber</td>
                                        <td>
                                            <button id='btnEdit' class='btn waves-effect waves-light btn-xs btn-success' onclick=ShowShiftDetails(@item.Id);><i class='fa fa-edit'></i></button>  &nbsp;
                                        </td>

                                        <td>
                                            @if (Model != null)
                                            {

                                                @using (Html.BeginForm("DeleteConsultant", "Consultant", new { Id = @item.Id }, FormMethod.Post))
                                                {

                                                    <button id='link_copy' class='btn waves-effect waves-light btn-xs btn-danger'><i class='fa fa-trash'></i></button>

                                                }
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
        </div>
    </div>
</div>

<div id="AddShiftModel" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg" id="AddEditContainerModel">
    </div>
</div>

@section scripts{
    <script>
        function ShowShiftDetails(id) {

            $.ajax({
                type: "POST",
                url: "/Consultant/CreateConsultant/" + id,
                data: '{customerId: 100 }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $("#AddEditContainerModel").html(response);
                    $("#AddShiftModel").modal('show');
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });

        }

    </script>
}